{
  "sensors": [
    {
      "name": "thermometer",
      "driver": "ds18b20",
      "options": {
        "scale": "F",
        "basePath": "/sys/bus/w1/devices",
        "path": "28-041652dd05ff"
      }
    }
  ],
  "outputs": [
    {
      "name": "well-head-heater",
      "driver": "relay",
      "options": {
        "pin": 25,
        "onValue": 0
      }
    },
    {
      "name": "pressure-tank-heater",
      "driver": "relay",
      "options": {
        "pin": 26,
        "onValue": 0
      }
    }
  ],
  "rules": [
    {
      "threshold": 20,
      "comparison": "lte",
      "interval": "2m",
      "sensor": "thermometer",
      "immediate": true,
      "action": {
        "output": "well-head-heater",
        "state": "on"
      }
    },
    {
      "threshold": 25,
      "comparison": "lte",
      "interval": "2m",
      "sensor": "thermometer",
      "immediate": true,
      "action": {
        "output": "pressure-tank-heater",
        "state": "on"
      }
    }
  ]
}
